@model List<CarWorkshop.Database.Order>
@{
    ViewBag.Title = "Index";
}

<div class="col-sm-3">
    @Html.Partial("_Sidebar")
</div>
<div class="col-sm-9">
    <div id="orders-index">
        @Html.Partial("_PageHeader", "Moje zamówienia")

        <table class="table table-responsive table-hover">
            <tr>
                <th style="width: 30%">
                    Numer zamówienia
                </th>
                <th style="width: 20%">
                    Wartość zamówienia
                </th>
                <th style="width: 20%">
                    Data zamówienia
                </th>
                <th style="width: 10%">
                    Status
                </th>
                <th style="width: 20%"></th>
            </tr>

            @foreach (var order in Model)
            {
                <tr class="table-item">
                    <td>
                        @order.OrderNumber
                    </td>
                    <td>
                        @order.GetTotal() zł
                    </td>
                    <td>
                        @order.Date
                    </td>
                    <td>
                        @if (order.Deleted)
                        {
                            <text>Usunięte</text>
                        }
                        else
                        {
                            @CarWorkshop.Helpers.StatusHelper.StatusToString(order.State)
                        }

                    </td>
                    <td class="text-right">
                        <a href="@Url.Action("Details", "Orders", new { @id=order.OrderId })" class="btn btn-primary btn-sm">Szczegóły</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

