@model List<CarWorkshop.Database.Order>
@{
    ViewBag.Title = "Index";
}

<div id="orders-index">
    @Html.Partial("_PageHeader", "Lista zamówień")

    <table class="table table-responsive table-hover">
        <tr>
            <th style="width: 40%">
                Numer zamówienia
            </th>
            <th style="width: 20%">
                Wartość zamówienia
            </th>
            <th style="width: 20%">
                Data zamówienia
            </th>
            <th style="width: 20%">
                Płatność
            </th>
            <th style="width: 10%">
                Status
            </th>
            <th style="width: 10%">

            </th>
        </tr>

        @foreach (var order in Model)
        {
            <tr class="table-item">
                <td>
                    @order.OrderNumber
                </td>
                <td>
                    @order.GetTotal() zł
                </td>
                <td>
                    @order.Date
                </td>
                <td>
                    @order.PaymentToString()
                </td>
                <td>
                    @if (order.Deleted)
                    {
                        <text>Usunięte</text>
                    }
                    else
                    {
                        @CarWorkshop.Helpers.StatusHelper.StatusToString(order.State)
                    }

                </td>
                <td>
                    <a href="@Url.Action("Details", "Orders", new { @id=order.OrderId })" class="btn btn-primary btn-sm">Szczegóły</a>
                </td>
            </tr>
        }
    </table>
</div>
